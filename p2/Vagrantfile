Vagrant.configure(2) do |config|
  config.vm.define 'master' do |master|
    master.vm.box = 'ubuntu/jammy64'
    master.vm.hostname = "master"
    master.vm.synced_folder ".", "/vagrant", type:"virtualbox"
    master.vm.network :forwarded_port, guest: 22, host: 22, id: 'ssh'
    master.vm.network :forwarded_port, guest: 80, host: 80, id: 'http'
    master.vm.network :forwarded_port, guest: 443, host: 443, id: 'https'
    master.vm.network 'private_network', ip: "192.168.56.110"
    master.vm.provision "file", source: "./.ssh/id_rsa.pub", destination: "/tmp/id_rsa.pub"
    master.vm.provision "file", source: "./scripts/", destination: "/tmp/"
    master.vm.provision "file", source: "./manifests/", destination: "/tmp/"
    master.vm.provider "virtualbox" do |v|
      v.memory = "2048"
      v.name = "inception-of-things-master01"
    end
    master.vm.provision "shell", inline: <<-SHELL
      /tmp/scripts/script_master.sh
    SHELL
  end

end

